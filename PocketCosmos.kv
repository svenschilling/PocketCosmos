#:kivy 2.0.0
WindowManager:
    MainScreen:
    PlayScreen:
    OptionsScreen:
    SavegameScreen:
    CreditsScreen:

<MainScreen>
    name: "main"
    FloatLayout:
        orientation: "horizontal"
        #size: root.width, root.height
        Label:
            id: 'background'
            text: "maintest"
        Image:
            source: 'img/background.png'
            size: self.texture_size
        Button:
            id: 'play_btn'
            text: "main"
            font_size: 30
            size_hint: None, None
            size: 100,40
            on_release: root.play_game(self)

<PlayScreen>
    name: "play"
    FloatLayout:
        orientation: "horizontal"
        size: root.width, root.height
        Button:
            text: "play"
            font_size: 30
