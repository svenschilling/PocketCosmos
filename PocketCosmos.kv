#:kivy 2.0.0
WindowManager:
    MainScreen:
    PlayScreen:
    OptionsScreen:
    SavegameScreen:
    CreditsScreen:

<MainScreen>
    name: "main"
    FloatLayout:
        
        orientation: "horizontal"
        
        Image:        
            source: 'img/background.png'
            size: 1920,1080
            allow_stretch: True
            keep_ratio: False
        
        Button:
            id: 'play_btn'
            
            font_size: 30
            size_hint: None, None
            size: 100,40
            background_color: 0,0,0,0
            on_release: app.root.current = "play"
            
            Image:
                id: 'play_img'
                source: 'img/play_btn.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                        
        Button:
            id: 'options_btn'
            
            font_size: 30
            size_hint: None, None
            size: 100,40
            pos: 100,0
            background_color: 0,0,0,0
            on_release: app.root.current = "options"

            Image:
                id: 'options_img'
                source: 'img/options_btn.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            id: 'savegames_btn'
            
            font_size: 30
            size_hint: None, None
            size: 100,40
            pos: 200,0
            background_color: 0,0,0,0
            on_release: app.root.current = "savegame"

            Image:
                id: 'savegames_img'
                source: 'img/savegames_btn.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
        
        Button:
            id: 'credits_btn'
            
            font_size: 30
            size_hint: None, None
            size: 100,40
            pos: 300,0
            background_color: 0,0,0,0
            on_release: app.root.current = "credits"

            Image:
                id: 'credits_img'
                source: 'img/credits_btn.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

<PlayScreen>
    name: "play"
    FloatLayout:
        orientation: "horizontal"
        size: root.width, root.height
        
        Image:
            source: 'img/background.png'
            size: 1920,1080
            allow_stretch: True
            keep_ratio: False

        Button:
            text: "mainmenu"
            font_size: 30
            size_hint: None, None
            size: 100,40
            background_color: 0,0,0,0
            on_release: app.root.current = "main"

<OptionsScreen>
    name: "options"
    FloatLayout:
        orientation: "horizontal"
        size: root.width, root.height
        Image:
            source: 'img/background.png'
            size: 1920,1080
            allow_stretch: True
            keep_ratio: False
        Button:
            text: "options"
            font_size: 30
            size_hint: None, None
            size: 100,40
            background_color: 0,0,0,0
            on_release: app.root.current = "main"
<SavegameScreen>
    name: "savegame"
    FloatLayout:
        orientation: "horizontal"
        size: root.width, root.height
        Image:
            source: 'img/background.png'
            size: 1920,1080
            allow_stretch: True
            keep_ratio: False
        Button:
            text: "save"
            font_size: 30
            size_hint: None, None
            size: 100,40
            background_color: 0,0,0,0
            on_release: app.root.current = "main"
           
<CreditsScreen>
    name: "credits"
    FloatLayout:
        orientation: "horizontal"
        size: root.width, root.height
        Image:
            source: 'img/background.png'
            size: 1920,1080
            allow_stretch: True
            keep_ratio: False
        Button:
            text: "credits"
            font_size: 30
            size_hint: None, None
            size: 100,40
            background_color: 0,0,0,0
            on_release: app.root.current = "main"
