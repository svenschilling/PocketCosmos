#:kivy 2.0.0
WindowManager:
    MainScreen:
    PlayScreen:
    OptionsScreen:
    SavegameScreen:
    CreditsScreen:

<MainScreen>
    name: "main"
    FloatLayout:
        orientation: "horizontal"
        
        Image:
            source: 'img/background.png'
            size: 1920,1080
            allow_stretch: True
            keep_ratio: False
        Button:
            id: 'play_btn'
            text: "Play"
            font_size: 30
            size_hint: None, None
            size: 100,40
            source: 'img/play_btn.png'
            on_release: app.root.current = "play"
                        
        Button:
            id: 'options_btn'
            text: "Options"
            font_size: 30
            size_hint: None, None
            size: 100,40
            pos: 100,0
            on_release: app.root.current = "options"
        Button:
            id: 'savegames_btn'
            text: "Savegames"
            font_size: 30
            size_hint: None, None
            size: 100,40
            pos: 200,0
            on_release: app.root.current = "savegame"
        Button:
            id: 'credits_btn'
            text: "Credits"
            font_size: 30
            size_hint: None, None
            size: 100,40
            pos: 300,0
            on_release: app.root.current = "credits"

<PlayScreen>
    name: "play"
    FloatLayout:
        orientation: "horizontal"
        size: root.width, root.height
        Image:
            source: 'img/background.png'
            size: 1920,1080
            allow_stretch: True
            keep_ratio: False
        Button:
            text: "mainmenu"
            font_size: 30
            size_hint: None, None
            size: 100,40
            on_release: app.root.current = "main"

<OptionsScreen>
    name: "options"
    FloatLayout:
        orientation: "horizontal"
        size: root.width, root.height
        Image:
            source: 'img/background.png'
            size: 1920,1080
            allow_stretch: True
            keep_ratio: False
        Button:
            text: "options"
            font_size: 30
            size_hint: None, None
            size: 100,40
            on_release: app.root.current = "main"
<SavegameScreen>
    name: "savegame"
    FloatLayout:
        orientation: "horizontal"
        size: root.width, root.height
        Image:
            source: 'img/background.png'
            size: 1920,1080
            allow_stretch: True
            keep_ratio: False
        Button:
            text: "save"
            font_size: 30
            size_hint: None, None
            size: 100,40
            on_release: app.root.current = "main"
           
<CreditsScreen>
    name: "credits"
    FloatLayout:
        orientation: "horizontal"
        size: root.width, root.height
        Image:
            source: 'img/background.png'
            size: 1920,1080
            allow_stretch: True
            keep_ratio: False
        Button:
            text: "credits"
            font_size: 30
            size_hint: None, None
            size: 100,40
            on_release: app.root.current = "main"
