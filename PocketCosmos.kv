#:kivy 2.0.0
WindowManager:
    
    MainScreen:
    PlayScreen:
    OptionsScreen:
    SavegameScreen:
    LoadgameScreen:
    CreditsScreen:    

<Button>
    font_size: 30
    size_hint: None, None
    background_color: 0,0,0,0

<FloatLayout>
    orientation: "horizontal"
    size: root.width, root.height

<MainScreen>
    name: "main"
    FloatLayout:
        
        Image:        
            source: 'media/background/background_main.png'
            size: 1920,1080
            allow_stretch: True
            keep_ratio: False
            Image:
                source: 'media/background/pocketcosmos.png'
                size: root.width, root.height
                allow_stretch: True
                keep_ratio: True
                center_x: self.parent.center_x
                center_y: self.parent.center_y                        
        
        Button:
            id: 'play_btn'
            pos_hint: {'center_x': 0.15,'center_y': 0.08}
            
            on_release: app.root.current = "play"
            
            Image:
                id: 'play_img'
                source: 'media/buttons/play.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                        


        Button:
            id: 'savegames_btn'
            pos_hint: {'center_x': 0.325,'center_y': 0.08}

            on_release: app.root.current = "savegame"

            Image:
                id: 'savegames_img'
                source: 'media/buttons/save.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            id: 'load_btn'
            pos_hint: {'center_x': 0.5,'center_y': 0.08}

            on_release: app.root.current = "play"
                        
            Image:
                id: 'load_img'
                source: 'media/buttons/load.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y                

        Button:
            id: 'options_btn' 
            pos_hint: {'center_x': 0.675,'center_y': 0.08}

            on_release: app.root.current = "options"

            Image:
                id: 'options_img'
                source: 'media/buttons/options.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            id: 'credits_btn'
            pos_hint: {'center_x': 0.85,'center_y': 0.08}

            on_release: app.root.current = "credits"

            Image:
                id: 'credits_img'
                source: 'media/buttons/credits.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

<PlayScreen>
    name: "play"
    FloatLayout: 

        Image:
            source: 'media/background/background_play.png'
            size: 1920,1080
            allow_stretch: True
            keep_ratio: False

        Button:
            on_release: app.root.current = "main"
            pos: 0,0
            Image:
                id: 'back_img'
                source: 'media/buttons/back.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

<OptionsScreen>
    name: "options"
    FloatLayout:

        Image:
            source: 'media/background/background_main.png'
            size: 1920,1080
            allow_stretch: True
            keep_ratio: False

        Button:
            on_release: app.root.current = "main"
            pos: 0,0
            Image:
                id: 'back_img'
                source: 'media/buttons/back.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

<SavegameScreen>
    name: "savegame"
    FloatLayout:

        Image:
            source: 'media/background/background_main.png'
            size: 1920,1080
            allow_stretch: True
            keep_ratio: False

        Button:
            on_release: app.root.current = "main"
            pos: 0,0
            Image:
                id: 'back_img'
                source: 'media/buttons/back.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
<LoadgameScreen>
    name: "loadgame"
    FloatLayout:

        Image:
            source: 'media/background/background_main.png'
            size: 1920,1080
            allow_stretch: True
            keep_ratio: False

        Button:
            on_release: app.root.current = "main"
            pos: 0,0
            Image:
                id: 'back_img'
                source: 'media/buttons/back.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y                
           
<CreditsScreen>
    name: "credits"
    FloatLayout:

        Image:
            source: 'media/background/background_main.png'
            size: 1920,1080
            allow_stretch: True
            keep_ratio: False
            Label:
                
                text: "im the stupid example text"
                pos: self.parent.center_x, self.parent.center_y
                halign: 'center'
                valign: 'center'

        Button:
            on_release: app.root.current = "main"
            pos: 0,0
            Image:
                id: 'back_img'
                source: 'media/buttons/back.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
