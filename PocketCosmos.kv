#:kivy 2.0.0
WindowManager:
    MainScreen:
    PlayScreen:
    OptionsScreen:
    SavegameScreen:
    CreditsScreen:

<RoundedButton@Button>
    background_color: 0,0,0,0
    canvas:
        Color:
            rgba: [1, 0, 0, 1]
    
        RoundedRectangle:
            size: self.size[0], self.size[1]
            pos: self.pos
            radius: dp(20)
    

<Button>
    font_size: 30
    size_hint: None, None
    background_color: 0,0,0,0

<FloatLayout>
    orientation: "horizontal"
    size: root.width, root.height

<MainScreen>
    name: "main"
    FloatLayout:
        
        Image:        
            source: 'media/background/background_main.png'
            size: 1920,1080
            allow_stretch: True
            keep_ratio: False
            Image:
                source: 'media/background/pocketcosmos.png'
                size: root.width, root.height
                allow_stretch: True
                keep_ratio: True
                center_x: self.parent.center_x
                center_y: self.parent.center_y
        
                
                
        
        Button:
            id: 'play_btn'
            size: 100,40
            pos: 0,0
            on_release: app.root.current = "play"
            
            Image:
                id: 'play_img'
                source: 'media/buttons/play.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                        
        Button:
            id: 'options_btn' 
            size: 100,40
            pos: 100,0
            on_release: app.root.current = "options"

            Image:
                id: 'options_img'
                source: 'media/buttons/options.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            id: 'savegames_btn'
            size: 100,40
            pos: 200,0
            on_release: app.root.current = "savegame"

            Image:
                id: 'savegames_img'
                source: 'media/buttons/save.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y
        
        Button:
            id: 'credits_btn'
            size: 100,40
            pos: 300,0
            on_release: app.root.current = "credits"

            Image:
                id: 'credits_img'
                source: 'media/buttons/credits.png'
                center_x: self.parent.center_x
                center_y: self.parent.center_y

<PlayScreen>
    name: "play"
    FloatLayout: 

        Image:
            source: 'media/background/background_play.png'
            size: 1920,1080
            allow_stretch: True
            keep_ratio: False

        Button:
            text: "mainmenu"
            size_hint: None, None
            size: 100,40
            on_release: app.root.current = "main"

<OptionsScreen>
    name: "options"
    FloatLayout:

        Image:
            source: 'media/background/background_main.png'
            size: 1920,1080
            allow_stretch: True
            keep_ratio: False

        Button:
            text: "options"
            size: 100,40
            on_release: app.root.current = "main"

<SavegameScreen>
    name: "savegame"
    FloatLayout:

        Image:
            source: 'media/background/background_main.png'
            size: 1920,1080
            allow_stretch: True
            keep_ratio: False

        Button:
            text: "save"
            size: 100,40
            on_release: app.root.current = "main"
           
<CreditsScreen>
    name: "credits"
    FloatLayout:

        Image:
            source: 'media/background/background_main.png'
            size: 1920,1080
            allow_stretch: True
            keep_ratio: False

        Button:
            text: "credits"
            size: 100,40
            on_release: app.root.current = "main"
